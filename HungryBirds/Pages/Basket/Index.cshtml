@page
@model HungryBirds.Pages.Basket.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
<h2>Your Basket</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Selection) {
        <tr>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SelectionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SelectionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SelectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
