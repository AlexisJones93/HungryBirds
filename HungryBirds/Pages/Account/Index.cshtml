@page
@model HungryBirds.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].AccountBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Parent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountBalance)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ParentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ParentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ParentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
